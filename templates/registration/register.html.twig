{% extends 'admin/base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="home-btn d-none d-sm-block">
        <a href="{{ path('homepage') }}" class="text-dark"><i class="fas fa-home h2"></i></a>
    </div>
    <div class="account-pages my-5 pt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary">
                            <div class="text-primary text-center p-4">
                                <h5 class="text-white font-size-20">Inscription</h5>
                                <p class="text-white-50">Veuillez remplir le formulaire pour vous inscrire</p>
                                <a href="{{ path('homepage') }}" class="logo logo-admin">
                                    <img src="{{ asset('images/logo.png') }}" height="24" alt="logo">
                                </a>
                            </div>
                        </div>

                        <div class="card-body p-4">
                            <div class="p-3">

                                {{ form_start(registrationForm, {attr: {class: 'form-horizontal mt-4'}}) }}

                                {{ form_row(registrationForm.firstname) }}
                                {{ form_row(registrationForm.lastname) }}
                                {{ form_row(registrationForm.email) }}
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Mot de passe'
                                }) }}
                                {{ form_row(registrationForm.agreeTerms) }}

                                    <div class="form-group row">
                                        <div class="col-12 text-right">
                                            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Register</button>
                                        </div>
                                    </div>

                                    <div class="form-group mt-2 mb-0 row">
                                        <div class="col-12 mt-4">
                                            <p class="mb-0">En m'inscrivant, j'accepte <a href="#" class="text-primary">Les conditions d'utilisations</a></p>
                                        </div>
                                    </div>

                                {{ form_end(registrationForm) }}

                            </div>
                        </div>

                    </div>

                    <div class="mt-5 text-center">
                        <p>Déjà un compte ? <a href="{{ path('admin_login') }}" class="font-weight-medium text-primary"> Connexion </a> </p>
                    </div>


                </div>
            </div>
        </div>
    </div>


{% endblock %}
