{% extends 'admin/base.html.twig' %}

{% block title %}Ajout de programmes{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/libs/select2/css/select2.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <div class="row align-items-center">
        <div class="col-sm-6">
            <div class="page-title-box">
                <h4 class="font-size-18">Programmes</h4>
            </div>
        </div>
    </div>
<div class="row">
    <div class="mx-auto col-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ajout de programme</h4>
                {{ form_start(programForm) }}
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(programForm.title) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            {{ form_row(programForm.imageFile) }}
                        </div>
                        <div class="col-4">
                            {{ form_row(programForm.format) }}
                        </div>
                        <div class="col-4">
                            {{ form_row(programForm.gender) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(programForm.trailerLink) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(programForm.synopsis) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mx-auto">
                            <button type="submit" class="btn btn-primary btn-block">Enregister</button>
                        </div>
                    </div>
                {{ form_end(programForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/libs/tinymce/tinymce.min.js') }}"></script>
    <script src="{{ asset('assets/libs/select2/js/select2.min.js') }}"></script>
    <script src="{{ asset('assets/libs/admin-resources/bootstrap-filestyle/bootstrap-filestyle.min.js') }}"></script>
    <script src="{{ asset('assets/js/pages/form-advanced.init.js') }}"></script>
    <script src="{{ asset('assets/js/pages/form-editor.init.js') }}"></script>
{% endblock %}